---
import Breadcrumbs from "@components/Breadcrumbs.astro";
---

<Breadcrumbs />
<main id="main-content">
  <slot />
</main>

<style>
  #main-content {
    @apply mx-auto w-full max-w-3xl px-4 pb-12 text-lg;
  }
